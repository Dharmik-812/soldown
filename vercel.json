{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/server.js" },
        { "src": "/(.*\\.(css|js|png|jpg|jpeg|svg|ico|json|webmanifest|woff2?))", "dest": "/public/$1" },
        { "src": "/(.*)", "dest": "/server.js" }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}

